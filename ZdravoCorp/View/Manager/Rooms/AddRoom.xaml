<Window x:Class="ZdravoCorp.View.Manager.Rooms.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.View.Manager.Rooms"
        mc:Ignorable="d"
        Title="AddRoom" Height="248" Width="401">

    <Grid>
        <Label Content="Identifier" 
               HorizontalAlignment="Left" 
               Margin="14,41,0,0" 
               VerticalAlignment="Top"/>

        <TextBox HorizontalAlignment="Left" 
                 Height="26" Margin="109,41,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Identifier, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" 
                 Width="240"/>

        <Label Content="Size" 
               HorizontalAlignment="Left" 
               Margin="14,82,0,0" 
               VerticalAlignment="Top"/>

        <TextBox HorizontalAlignment="Left" 
                 Height="26" 
                 Margin="109,82,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Size, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" 
                 Width="240"/>

        <Label Content="RoomType" 
               HorizontalAlignment="Left" 
               Margin="14,125,0,0" 
               VerticalAlignment="Top" 
               Width="75"/>

        <ComboBox x:Name="Types" 
                  HorizontalAlignment="Left" 
                  Margin="109,127,0,0" 
                  VerticalAlignment="Top" 
                  Width="240">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Background="Transparent" Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Add" 
                HorizontalAlignment="Left" 
                Margin="354,127,0,0" 
                VerticalAlignment="Top" 
                Height="22" 
                Click="RoomTypeAdd_Click"/>

        <Button Content="Create" 
                HorizontalAlignment="Left" 
                Margin="279,168,0,0" VerticalAlignment="Top" 
                Click="Create_Click" 
                Height="36" 
                Width="59"/>
    </Grid>
</Window>
