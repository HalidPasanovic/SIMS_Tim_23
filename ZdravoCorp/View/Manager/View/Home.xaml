                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Center" 
                    FontSize="18"
                    Style="{DynamicResource ManagerLabels}" Height="34" Width="75"/>

        <Button Content="Button" 
                    HorizontalAlignment="Left" 
                    Margin="247,349,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    Style="{DynamicResource WindowButton}" 
                    Height="130" 
                    Width="151"/>

        <Label  Content="Rooms" 
                    HorizontalAlignment="Left" 
                    Margin="288,471,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Center" 
                    FontSize="18"
                    Style="{DynamicResource ManagerLabels}" Height="34" Width="73"/>

        <Button Content="Button" 
                    HorizontalAlignment="Center" 
                    Margin="0,501,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    Style="{DynamicResource WindowButton}" 
                    Height="131" 
                    Width="152"/>

        <Label  Content="Rooms" 
                    HorizontalAlignment="Center" 
                    Margin="0,622,0,0" 
                    Grid.Row="2" 
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Center" 
                    FontSize="18"
                    Style="{DynamicResource ManagerLabels}" Height="34" Width="76"/>
    </Grid>
