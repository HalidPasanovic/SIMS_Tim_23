<UserControl x:Class="ZdravoCorp.View.Manager.View.Medications.RequestsMedication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoCorp.View.Manager.View.Medications" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:p="clr-namespace:ZdravoCorp.View.Core"
             mc:Ignorable="d" 
             d:DesignHeight="667" d:DesignWidth="430">
    <Grid>

        <DataGrid x:Name="RoomTable" 
                      ItemsSource="{Binding MedicationRequests}" 
                      Margin="0,70,0,0" 
                      AutoGenerateColumns="False"
                      SelectionMode="Single" 
                      IsReadOnly="True"
                      Background="Transparent" 
                      CanUserResizeRows="False"
                      FontFamily="/Resources/Fonts/#Poppins"
                      TextBlock.TextAlignment="Left"
                      FontSize="13"
                      Style="{DynamicResource ManagerTables}"
                      BorderThickness="2"
                      HorizontalGridLinesBrush="Transparent"
                      VerticalGridLinesBrush="Transparent" 
                      SelectedItem="{Binding SelectedRequest}"
                      >
            <DataGrid.Columns>
                <DataGridTextColumn Header="{p:Loc Name}" Binding="{Binding Name}" ElementStyle="{StaticResource WrapText}" Width="*"/>
                <DataGridTextColumn Header="{p:Loc Status}" Binding="{Binding Status}" ElementStyle="{StaticResource WrapText}" Width="*"/>
            </DataGrid.Columns>
            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ViewCommand}"/>
            </DataGrid.InputBindings>
        </DataGrid>

        <TextBox HorizontalAlignment="Center"
                     Margin="0,16,0,0" 
                     TextWrapping="Wrap" 
                     Text="" 
                     VerticalAlignment="Top" 
                     Width="260"
                     Style="{StaticResource ManagerSearch}" 
                     Name="Search"
                     Tag="{p:Loc Search}"
                     Height="42"/>
    </Grid>
</UserControl>
