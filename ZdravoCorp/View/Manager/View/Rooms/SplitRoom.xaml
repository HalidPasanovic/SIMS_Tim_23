<UserControl x:Class="ZdravoCorp.View.Manager.View.Rooms.SplitRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoCorp.View.Manager.View.Rooms"
             xmlns:p="clr-namespace:ZdravoCorp.Properties"
             mc:Ignorable="d" 
            d:DesignHeight="667" d:DesignWidth="430">
    <Grid>

        <Label Content="{x:Static p:Resources.Selected_Room}"
            HorizontalAlignment="Center" 
            Margin="0,25,0,0" 
            VerticalAlignment="Top" 
            Width="98"
            Style="{StaticResource ManagerLabels}"/>

        <TextBox HorizontalAlignment="Center"
                 Margin="0,58,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Identifier, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" 
                 Width="338"
                 Style="{StaticResource ManagerTextBox}" 
                 Name="Designation"
                 Tag="{x:Static p:Resources.Designation}"
                 Height="46"
                 />

        <Label Content="{x:Static p:Resources.Floor}" 
            HorizontalAlignment="Center" 
            Margin="0,113,0,0" 
            VerticalAlignment="Top" 
            Width="37"
            Style="{StaticResource ManagerLabels}"/>

        <TextBox HorizontalAlignment="Center"
            Margin="0,141,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Floor, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="338"
            Style="{StaticResource ManagerTextBox}" 
            x:Name="Size_Copy1"
            Tag="{x:Static p:Resources.Floor}"
            Height="46"
            />

        <Label Content="{x:Static p:Resources.Designation_for_new_Room}" 
            HorizontalAlignment="Center" 
            Margin="0,200,0,0" 
            VerticalAlignment="Top" 
            Width="166"
            Style="{StaticResource ManagerLabels}"/>

        <TextBox HorizontalAlignment="Center"
            Margin="0,233,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding NewIdentifier, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="338"
            Style="{StaticResource ManagerTextBox}" 
            x:Name="Designation_Copy"
            Tag="{x:Static p:Resources.Designation}"
            Height="46"
                 />

        <Label Content="{x:Static p:Resources.Surface_Area}" 
            HorizontalAlignment="Left" 
            Margin="78,306,0,0" 
            VerticalAlignment="Top" 
            Width="86"
            Style="{StaticResource ManagerLabels}"/>

        <TextBox HorizontalAlignment="Left"
            Margin="46,334,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="149"
            Style="{StaticResource ManagerTextBox}" 
            x:Name="Size"
            Tag="{x:Static p:Resources.Size}"
            Height="46"
            />

        <Label Content="{x:Static p:Resources.Max_surface}" 
            HorizontalAlignment="Left" 
            Margin="270,306,0,0" 
            VerticalAlignment="Top" 
            Width="82"
            Style="{StaticResource ManagerLabels}"/>

        <TextBox HorizontalAlignment="Left"
            Margin="236,334,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding MaxSize, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="148"
            Style="{StaticResource ManagerTextBox}" 
            x:Name="Size_Copy"
            Tag="{x:Static p:Resources.Max}"
            Height="46"
            />

        <Button Content="{x:Static p:Resources.Split}" 
                HorizontalAlignment="Left" 
                Margin="323,587,0,0" 
                VerticalAlignment="Top" 
                Height="47" 
                Width="83"
                Command="{Binding SplitCommand}"
                Style="{StaticResource ManagerButtons}"/>

    </Grid>
</UserControl>