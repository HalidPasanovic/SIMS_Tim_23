<UserControl x:Class="ZdravoCorp.View.Manager.View.Rooms.AddRoomType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZdravoCorp.View.Manager.View"
             mc:Ignorable="d" 
             d:DesignHeight="667" d:DesignWidth="430">
    <Grid>

        <TextBox HorizontalAlignment="Center"
                 Margin="0,76,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" 
                 Width="274"
                 Style="{StaticResource ManagerTextBox}" 
                 Name="Name"
                 Tag="Name"
                 Height="45"/>

        <Button Content="Add" 
                HorizontalAlignment="Left" 
                Margin="360,587,0,0" 
                VerticalAlignment="Top" 
                Height="47" 
                Width="46"
                Command="{Binding AddRoomTypeCommand}"
                Style="{StaticResource ManagerButtons}"/>


    </Grid>
</UserControl>
