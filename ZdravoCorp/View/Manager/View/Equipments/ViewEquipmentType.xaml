<UserControl x:Class="ZdravoCorp.View.Manager.View.Equipments.ViewEquipmentType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:ZdravoCorp.View.Core"
             mc:Ignorable="d" 
             d:DesignHeight="667" d:DesignWidth="430">
    <Grid>

        <TextBox HorizontalAlignment="Left"
                 Margin="80,103,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" 
                 Width="274"
                 Style="{StaticResource ManagerTextBox}" 
                 Name="Name"
                 Tag="{p:Loc Name}"
                 Height="45"/>

        <TextBox HorizontalAlignment="Center"
            Margin="0,183,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Top" 
            Width="274"
            Style="{StaticResource ManagerTextBlock}"
            Tag="{p:Loc Description}"
            x:Name="Description" 
            Height="137"/>

        <CheckBox Content="{p:Loc Disposable}" 
                  HorizontalAlignment="Left" 
                  Margin="80,354,0,0" 
                  VerticalAlignment="Top"
                  Foreground="DarkGray"
                  IsChecked="{Binding Disposable, UpdateSourceTrigger=PropertyChanged}"
                  Style = "{DynamicResource ManagerCheckBox}"
                  FontFamily="/Resources/Fonts/#Poppins"
                  />


        <Button Content="{p:Loc Add}" 
                HorizontalAlignment="Left" 
                Margin="348,559,0,0" 
                VerticalAlignment="Top" 
                Height="47" 
                Width="46"
                Command="{Binding AddViewCommand}"
                Style="{StaticResource ManagerButtons}"/>




    </Grid>
</UserControl>