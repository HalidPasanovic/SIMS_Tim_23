<Window x:Class="ZdravoCorp.View.Manager.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.View.Manager" 
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:viewModel="clr-namespace:ZdravoCorp.View.Manager.ViewModel"
        mc:Ignorable="d"
        Title="Manager" 
        Height="790" Width="430"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" 
        Closing="CloseWindow"
        WindowStartupLocation="CenterScreen">

    <Border Background="#222831"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="667*"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    CornerRadius="10,10,0,0"
                    Background="#393E46">
                <StackPanel Orientation="Horizontal">

                    <Label Content="" 
                           MouseLeftButtonDown="Drag_MouseDown"
                           Style="{StaticResource LoginLabels}" 
                           Width="362" 
                           Height="33"/>

                    <Button Content="-"
                            Style="{StaticResource MinimiseButton}" 
                            Click="Minimize_Click" 
                            Width="34" 
                            Height="35"/>
                    <Button Content="×"
                            Style="{StaticResource ExitButton}" 
                            Click="Exit_Click" 
                            Width="34" 
                            Height="34" />

                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Background="#EEEEEE">

                <Label Content="{Binding Path=Title, UpdateSourceTrigger=PropertyChanged}" 
                       Style="{StaticResource ActionLabels}" 
                       Width="362" 
                       Height="41"/>

                <Button Content="&lt;"
                    Style="{StaticResource MinimiseButton}"
                    Foreground="#393E46" 
                    Width="34" 
                    Height="44" 
                    Command="{Binding BackViewCommand}"/>

                <Button Content="≡"
                    Style="{StaticResource MinimiseButton}"
                    Foreground="#393E46" 
                    Width="34" 
                    Height="40" />

            </StackPanel>

            <ContentControl Grid.Row="2"
                            Content="{Binding CurrentView}"/>

            <Border Grid.Row="3"
                    CornerRadius="0,0,10,10"
                    Background="#393E46">
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource ActionButton}"
                            Foreground="#EEEEEE"
                            Width="86" 
                            Height="45">
                        <StackPanel Height="42" Width="84">
                            <svgc:SvgViewbox Source="\Resources\Icons\medicine.svg" Width="84" Height="28"/>
                            <Label Content="Medicine" 
                                   Style="{DynamicResource ActionBarLabel}" 
                                   FontSize="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Top"
                                   Padding="0,0,0,0"
                                   Height="13" Width="84"/>
                        </StackPanel>

                    </Button>

                    <Button Style="{StaticResource ActionButton}"
                            Foreground="#EEEEEE"
                            Width="86" 
                            Height="45"
                            Command="{Binding RoomViewCommand}">
                        <StackPanel Height="42" Width="84">
                            <svgc:SvgViewbox Source="\Resources\Icons\rooms.svg" Width="84" Height="28"/>
                            <Label Content="Rooms" 
                                   Style="{DynamicResource ActionBarLabel}" 
                                   FontSize="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Top"
                                   Padding="0,0,0,0"
                                   Height="13" Width="84"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ActionButton}"
                            Foreground="#EEEEEE"
                            Width="86" 
                            Height="45" 
                            Command="{Binding MainViewCommand}">
                        <StackPanel Height="42" Width="84">
                            <svgc:SvgViewbox Source="\Resources\Icons\home.svg" Width="84" Height="28"/>
                            <Label Content="Home" 
                                   Style="{DynamicResource ActionBarLabel}" 
                                   FontSize="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Top"
                                   Padding="0,0,0,0"
                                   Height="13" Width="84"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ActionButton}"
                            Foreground="#EEEEEE"
                            Width="86" 
                            Height="45" 
                            Command="{Binding EquipmentViewCommand}">
                        <StackPanel Height="42" Width="84">
                            <svgc:SvgViewbox Source="\Resources\Icons\equipment.svg" Width="84" Height="28"/>
                            <Label Content="Equipment" 
                                   Style="{DynamicResource ActionBarLabel}" 
                                   FontSize="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Top"
                                   Padding="0,0,0,0"
                                   Height="13" Width="84"/>
                        </StackPanel>
                    </Button>

                    <Button
                    Style="{StaticResource ActionButton}"
                    Foreground="#EEEEEE"
                    Width="86" 
                    Height="45" >
                        <StackPanel Height="42" Width="84">
                            <svgc:SvgViewbox Source="\Resources\Icons\employees.svg" Width="84" Height="28"/>
                            <Label Content="Employess" 
                                   Style="{DynamicResource ActionBarLabel}" 
                                   FontSize="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Top"
                                   Padding="0,0,0,0"
                                   Height="13" Width="84"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

    </Border>
</Window>
