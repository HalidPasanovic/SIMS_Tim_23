<Page x:Class="ZdravoCorp.View.Secretary.EquipmentOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoCorp.View.Secretary"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="EquipmentOrder">

    <Grid Background="White">
        <Button Style="{DynamicResource SecretaryButtons}" Content="Meni" HorizontalAlignment="Left" Height="50" Margin="10,5,0,0" VerticalAlignment="Top" Width="140" />
        <Label Content="Zahtevi za porudžbinu opreme" Margin="0,17,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DataGrid x:Name="OrderEquipmentTable" ItemsSource="{Binding}" Margin="45,82,45,151"  Style="{DynamicResource SecretaryTables}"
            AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" AlternationCount="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv proizvoda"  Width="*"/>
                <DataGridTextColumn Header="Količina"  Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Style="{DynamicResource SecretaryButtons}" Content="Poruči" HorizontalAlignment="Left" Height="50" Margin="414,540,0,0" VerticalAlignment="Top" Width="140" />

    </Grid>
</Page>
