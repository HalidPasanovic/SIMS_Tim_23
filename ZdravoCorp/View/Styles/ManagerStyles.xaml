<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ManagerButtons" TargetType="{x:Type Button}">
        <Setter Property="BorderBrush" Value="#db4845"/>
        <Setter Property="Foreground" Value="#db4845"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="9"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="CircularButtons" TargetType="{x:Type Button}">
        <Setter Property="BorderBrush" Value="#db4845"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#db4845"/>
        <Setter Property="FontFamily" Value="Bahnschrift SemiBold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="100"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="ManagerLabels" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="#db4845"/>
        <Setter Property="FontFamily" Value="Bahnschrift SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style x:Key="ManagerDataGrid" TargetType="{x:Type DataGrid}">
    </Style>
    <Style x:Key="ManagerTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#db4845"/>
        <Setter Property="FontFamily" Value="Bahnschrift SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>