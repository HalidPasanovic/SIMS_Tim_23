<Window x:Class="ZdravoCorp.View.Patient.Patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.View.Patient"
        mc:Ignorable="d"
        Title="Patient" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="607*"/>
            <ColumnDefinition Width="387*"/>
            <ColumnDefinition Width="206*"/>
        </Grid.ColumnDefinitions>
        <TabControl SelectionChanged="TabControl_SelectionChanged" Grid.ColumnSpan="3" Margin="50,40,10,0">
            <TabItem Header="Osnovni podaci">
                <Grid 
                    Background="#FFE5E5E5"
                    Margin="30,30,30,30" 
                >
                    <Label x:Name ="Name"  Margin="49,26,613,300"/>

                </Grid>
            </TabItem>
            <TabItem Header="Pregledi">
                <Grid 
                    Background="#FFE5E5E5" 
                    Margin="30,10,30,10" Height="385" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="384*"/>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name ="PatientAppointmentTable"
                            HorizontalAlignment="Left"
                            Height="268"
                            Margin="14,82,0,0" 
                            VerticalAlignment="Top" 
                            Width="846"
                            ItemsSource="{Binding}"
                            AutoGenerateColumns="False"
                            SelectionMode="Single" 
                            IsReadOnly="True" 
                            Grid.ColumnSpan="2"
                            SelectionChanged="PatientAppointmentTable_SelectionChanged">

                            <DataGrid.Columns >
                                <DataGridTextColumn x:Name ="Doctor" Header="Doktor" Binding="{Binding NameSurname}" Width="*"/>
                                <DataGridTextColumn Header="Pocetak" Binding="{Binding startDate}" Width="*"/>
                                <DataGridTextColumn Header="Kraj" Binding="{Binding endDate}" Width="*"/>
                                <DataGridTextColumn Header="Soba" Binding="{Binding}" Width="*"/>

                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Dodaj" 
                            HorizontalAlignment="Left" 
                            Margin="52,30,0,0" 
                            VerticalAlignment="Top"
                            Click="Add_Appointment" 
                                Height="30" 
                                Width="80"/>
                        <Button Content="Izmeni" 
                            HorizontalAlignment="Left" 
                            Margin="237,30,0,0" 
                            VerticalAlignment="Top"
                            Click="Change_Appointment" 
                            Width="80"
                            Height="30"
                                />
                        <Button Content="Obriši" 
                            HorizontalAlignment="Left" 
                            Margin="420,30,0,0" 
                            VerticalAlignment="Top" 
                            RenderTransformOrigin="0.265,-0.198"
                            Click="Delete_Appointment" 
                            Width="80" 
                            Height="30"
                        />

                    </Grid>
                </Grid>

            </TabItem>
            <TabItem Header="Stagod1">
                <Grid 
                    Background="#FFE5E5E5" 
                    Margin="30,30,30,30" 
                />

            </TabItem>
            <TabItem Header="Stagod2">
                <Grid 
                    Background="#FFE5E5E5" 
                    Margin="30,30,30,30" 
                />

            </TabItem>
        </TabControl>


    </Grid>
</Window>
