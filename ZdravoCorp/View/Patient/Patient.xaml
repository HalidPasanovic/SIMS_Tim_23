<Window x:Class="ZdravoCorp.View.Patient.Patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.View.Patient"
        mc:Ignorable="d"
        Title="{Binding}" Height="500" Width="1000">
    <Grid HorizontalAlignment="Stretch">
        <TabControl SelectionChanged="TabControl_SelectionChanged" Grid.ColumnSpan="3" Margin="30,30,30,30">
            <TabItem Header="Osnovni podaci" Style="{DynamicResource TabsStyle}">
                <Grid 
                    Background="#FFFFFF"
                    Margin="30,10,30,0" 
                    HorizontalAlignment="Stretch"
                >
                    

                    <Image HorizontalAlignment="Left" Height="168" Margin="30,26,0,0" VerticalAlignment="Top" Width="130" Grid.ColumnSpan="2"/>
                    <Button Content="Postavi sliku" Margin="45,208,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="35"/>
                    <Label x:Name ="NameLabel" Style="{DynamicResource Label}" Content="Ime"  Margin="200,26,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="SurnameLabel" Style="{DynamicResource Label}" Content="Prezime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,61,0,0" Grid.Column="1"/>
                    <Label x:Name="DateOfBirthLabel" Style="{DynamicResource Label}" Content="Datum rodjenja" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,94,0,0" Grid.Column="1"/>
                    <Label x:Name="GenderLabel" Style="{DynamicResource Label}" Content="Pol " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,126,0,0" Grid.Column="1"/>
                    <Label x:Name="JMBGLabel" Style="{DynamicResource Label}" Content="JMBG " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,161,0,0" Grid.Column="1"/>
                    <Label x:Name="TelephoneLabel" Style="{DynamicResource Label}" Content="Kontakt telefon " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,194,0,0" Grid.Column="1"/>
                    <Label x:Name="EmailLabel" Style="{DynamicResource Label}" Content="Email " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,226,0,0" Grid.Column="1" />
                    
                    <TextBox x:Name="NameTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="NoWrap" Width="200"  HorizontalAlignment="left" VerticalAlignment="Top" Margin="320,30,0,0" Grid.Column="1"/>
                    <TextBox x:Name="SurnameTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="Wrap" Width="200"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,65,0,0" Grid.Column="1"/>
                    <TextBox x:Name="BirthTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="Wrap" Width="200"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,98,0,0" Grid.Column="1"/>
                    <TextBox x:Name="JMBGTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="Wrap" Width="200"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,165,0,0" Grid.Column="1"/>
                    <TextBox x:Name="PhoneTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="Wrap" Width="200"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,198,0,0" Grid.Column="1"/>
                    <TextBox x:Name="EmailTextBox" Style="{DynamicResource InfoTextBox}" TextWrapping="Wrap" Width="200"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,230,0,0" Grid.Column="1"/>
                    <RadioButton x:Name="MaleButton" Style="{DynamicResource RadioButton}" Content="Muško" Margin="320,132,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                    <RadioButton x:Name="FemaleButton" Style="{DynamicResource RadioButton}" Content="Žensko" Margin="400,132,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button Style="{DynamicResource BlueButton}" Content="Oceni bolnicu" Click="HospitalSurvey_Click" Margin="30,302,0,0" Width="130" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pregledi" Style="{DynamicResource TabsStyle}">
                <Grid 
                    Background="#FFFFFF" 
                    Margin="30,10,30,10" Height="385" >
                    <Grid>
                        <DataGrid x:Name ="PatientAppointmentTable"
                            Style="{DynamicResource PatientTables}"
                            AlternationCount="2"
                            HorizontalAlignment="Left"
                            Height="268"
                            Margin="14,82,0,0" 
                            VerticalAlignment="Top" 
                            Width="846"
                            ItemsSource="{Binding}"
                            AutoGenerateColumns="False"
                            SelectionMode="Single" 
                            IsReadOnly="True" 
                            Grid.ColumnSpan="2"
                            SelectionChanged="PatientAppointmentTable_SelectionChanged">

                            <DataGrid.Columns >
                                <DataGridTextColumn x:Name ="Doctor" Header="Doktor" Binding="{Binding NameSurname}" Width="*"/>
                                <DataGridTextColumn Header="Pocetak" Binding="{Binding startDate}" Width="*"/>
                                <DataGridTextColumn Header="Kraj" Binding="{Binding endDate}" Width="*"/>
                                <DataGridTextColumn Header="Soba" Binding="{Binding Room.DesignationCode}" Width="*"/>

                            </DataGrid.Columns>
                        </DataGrid>
                        <Button 
                            Style="{DynamicResource BlueButton}"
                            Content="Dodaj" 
                            HorizontalAlignment="Left" 
                            Margin="52,30,0,0" 
                            VerticalAlignment="Top"
                            Click="Add_Appointment" 
                                Height="30" 
                                Width="80"/>
                        <Button
                            Style="{DynamicResource BlueButton}"
                            Content="Izmeni" 
                            HorizontalAlignment="Left" 
                            Margin="237,30,0,0" 
                            VerticalAlignment="Top"
                            Click="Change_Appointment" 
                            Width="80"
                            Height="30"
                                />
                        <Button 
                            Style="{DynamicResource CancelButton}"
                            Content="Obriši" 
                            HorizontalAlignment="Left" 
                            Margin="420,30,0,0" 
                            VerticalAlignment="Top" 
                            RenderTransformOrigin="0.265,-0.198"
                            Click="Delete_Appointment" 
                            Width="80" 
                            Height="30"
                        />

                    </Grid>
                </Grid>

            </TabItem>
            <TabItem Header="Karton" Style="{DynamicResource TabsStyle}">
                <Grid 
                    Background="#FFFFFF" 
                    Margin="30,30,30,30" 
                >
                    <Label 
                        Content="Visina" 
                        Margin="40,28,0,0" 
                        Height="30" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"/>
                    <TextBox 
                        TextWrapping="Wrap" 
                        Text="TextBox" 
                        Width="120"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Margin="132,25,0,0"/>
                    <Label 
                        Content="Tezina"
                        Height="30" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Margin="40,63,0,0"/>
                    <TextBox 
                        TextWrapping="Wrap" 
                        Text="TextBox" 
                        Width="120"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Margin="132,68,0,0"/>
                    <Label 
                        Content="Krvna grupa"
                        Height="30" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Margin="40,102,0,0"/>
                    <ComboBox Margin="132,104,0,0" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Width="120"/>
                    <Label Content="Obavljeni pregledi" HorizontalAlignment="Left" 
                        VerticalAlignment="Center" Margin="40,0,0,0"/>
                    <DataGrid x:Name ="DoneAppointments"
                            Style="{DynamicResource PatientTables}"
                            AlternationCount="2"
                            HorizontalAlignment="Left"
                            Height="140"
                            Margin="40,186,0,0" 
                            VerticalAlignment="Top" 
                            Width="604"
                            ItemsSource="{Binding}"
                            AutoGenerateColumns="False"
                            SelectionMode="Single" 
                            IsReadOnly="True">
                        <DataGrid.Columns >
                            <DataGridTextColumn Header="Doktor" Binding="{Binding NameSurname}" Width="*"/>
                            <DataGridTextColumn Header="Pocetak" Binding="{Binding startDate}" Width="*"/>
                            <DataGridTextColumn Header="Kraj" Binding="{Binding endDate}" Width="*"/>
                            <DataGridTextColumn Header="Soba" Binding="{Binding Room.DesignationCode}" Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <Button 
                        Style="{DynamicResource BlueButton}"
                        Content="Alergeni" HorizontalAlignment="Left" Margin="479,28,0,0" VerticalAlignment="Top"
                            Width="100" Height="30"/>
                    <Button 
                        Style="{DynamicResource BlueButton}"
                        Content="Istorija bolesti" HorizontalAlignment="Left" Margin="479,68,0,0" VerticalAlignment="Top"
                        Width="100" Height="30"/>
                    <Button 
                        Style="{DynamicResource BlueButton}"
                        Content="Prikaz izvestaja" HorizontalAlignment="Left" Margin="479,117,0,0" VerticalAlignment="Top"
                        Width="100" Height="30"/>
                    <Button  
                        Style="{DynamicResource BlueButton}"
                        Click="AppointmentSurvey_Click" Content="Anketa" HorizontalAlignment="Left" Height="30" Margin="698,28,0,0" VerticalAlignment="Top" Width="91"/>
                </Grid>

            </TabItem>
            <TabItem Header="Terapije"  Style="{DynamicResource TabsStyle}">
                <Grid 
                    Background="#FFFFFF" 
                    Margin="30,30,30,30" 
                >
                    <Label Content="Trenutne terapije" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.995,2.18" Margin="10,27,0,0"/>
                    <DataGrid x:Name ="CurrentTherapies"
                            Style="{DynamicResource PatientTables}"
                            HorizontalAlignment="Center"
                            Height="201"
                            Margin="0,81,0,0" 
                            VerticalAlignment="Top" 
                            Width="854"
                            ItemsSource="{Binding}"
                            AutoGenerateColumns="False"
                            SelectionMode="Single" 
                            IsReadOnly="True">

                        <DataGrid.Columns >
                            <DataGridTextColumn Header="Doktor" Binding="{Binding NameSurname}" Width="*"/>
                            <DataGridTextColumn Header="Pocetak" Binding="{Binding startDate}" Width="*"/>
                            <DataGridTextColumn Header="Kraj" Binding="{Binding endDate}" Width="*"/>
                            <DataGridTextColumn Header="Soba" Binding="{Binding Room.DesignationCode}" Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox HorizontalAlignment="Left" Height="25" Margin="744,28,0,0" TextWrapping="Wrap" Text="Pretraga" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Nedeljni izvestaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="744,306,0,0" Width="120" Height="30"/>

                </Grid>

            </TabItem>
        </TabControl>
        <Menu  VerticalAlignment="Top" Height="25" HorizontalAlignment="Stretch">
            <MenuItem Header="File" Width="50"/>
            <MenuItem Header="Open" Width="50"/>
        </Menu>
        <Button Style="{DynamicResource BlueButton}" Click="LogOut_Click" Content="Odjavite se" Width="90"  HorizontalAlignment="Right" VerticalAlignment="Top" />




    </Grid>
</Window>
