<Window x:Class="ZdravoCorp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Upravnik">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="674*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,25,0,0" Grid.ColumnSpan="6"/>
                    <Button Content="Dodaj" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                    <Button Content="Obrisi" HorizontalAlignment="Center" VerticalAlignment="Top" Width="36" Grid.Column="1"/>
                    <Button Content="Izmeni" HorizontalAlignment="Left" Margin="16,0,0,0" VerticalAlignment="Top" Grid.Column="3" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="Lekar">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="757*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Probaj_lekar" HorizontalAlignment="Left" Margin="14,54,0,0" VerticalAlignment="Top" Click="Probaj_lekar_Click" Grid.Column="3" Content="Add Appointment"/>
                    <Button x:Name="ispisi_appointmente" HorizontalAlignment="Left" Margin="14,19,0,0" VerticalAlignment="Top" Grid.Column="3" Click="ispisi_appointmente_Click" Content="Write All Appointments"/>
                    <Button x:Name="Read_Button" Grid.Column="3" HorizontalAlignment="Left" Margin="14,95,0,0" VerticalAlignment="Top" Click="Read_Button_Click" Content="Read Specific Appointment"/>
                </Grid>
            </TabItem>
            <TabItem Header="Sekretar">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Pacient">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
